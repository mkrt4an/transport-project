<!--DeleteServletMapping-->
    <servlet-mapping>
        <servlet-name>DeleteDriverServlet</servlet-name>
        <url-pattern>/DeleteDriverServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTruckServlet</servlet-name>
        <url-pattern>/DeleteTruckServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCargoServlet</servlet-name>
        <url-pattern>/DeleteCargoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <url-pattern>/DeleteOrderServlet</url-pattern>
    </servlet-mapping>

    <!--UpdateServletMapping-->
    <servlet-mapping>
        <servlet-name>UpdateDriverServlet</servlet-name>
        <url-pattern>/UpdateDriverServlet</url-pattern>
        <url-pattern>/UpdateDriverServletConfirmed</url-pattern>
        <url-pattern>/AddDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTruckServlet</servlet-name>
        <url-pattern>/UpdateTruckServlet</url-pattern>
        <url-pattern>/UpdateTruckServletConfirmed</url-pattern>
        <url-pattern>/AddTruck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCargoServlet</servlet-name>
        <url-pattern>/UpdateCargoServlet</url-pattern>
        <url-pattern>/UpdateCargoServletConfirmed</url-pattern>
        <url-pattern>/AddCargo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateOrderServlet</servlet-name>
        <url-pattern>/UpdateOrderServlet</url-pattern>
        <url-pattern>/UpdateOrderServletConfirmed</url-pattern>
        <url-pattern>/AddOrder</url-pattern>
    </servlet-mapping>

    <error-page>
        <!-- Missing login -->
        <error-code>401</error-code>
        <location>/general-error.html</location>
    </error-page>
    <error-page>
        <!-- Forbidden directory listing -->
        <error-code>403</error-code>
        <location>/general-error.html</location>
    </error-page>
    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/Error404.html</location>
    </error-page>
    <error-page>
        <!-- Uncaught exception -->
        <error-code>500</error-code>
        <location>/general-error.html</location>
    </error-page>
    <error-page>
        <!-- Unsupported servlet method -->
        <error-code>503</error-code>
        <location>/general-error.html</location>
    </error-page>

</web-app>
